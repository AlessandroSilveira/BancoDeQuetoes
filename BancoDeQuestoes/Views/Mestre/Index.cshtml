@using BancoDeQuestoes.Services
@model IEnumerable<BancoDeQuestoes.Models.INSCR_BQ_MESTRE>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mestre</h2>

<p>
	@Html.ActionLink("Novo Mestre", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.DESC_NOME)
		</th>
		
		<th>
			@Html.DisplayNameFor(model => model.INSCR_BQ_BANCA.DESC_BANCA)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DESC_TELEFONE)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DESC_CELULAR)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DESC_EMAIL)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DESC_SENHA)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DESC_ATIVO)
		</th>

		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.DESC_NOME)
			</td>
			
			
			<td>
				@Html.DisplayFor(modelItem => item.INSCR_BQ_BANCA.DESC_BANCA)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DESC_DDD) - @Html.DisplayFor(modelItem => item.DESC_TELEFONE)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DESC_DDD_CEL) - @Html.DisplayFor(modelItem => item.DESC_CELULAR)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DESC_EMAIL)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DESC_SENHA)
			</td>
			<td>
				@{
					var ativo = item.DESC_ATIVO == "S" ? "Sim" : "Não";
				}
				@ativo
			</td>
			
			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.ID_MESTRE }) |
				@Html.ActionLink("Detalhes", "Details", new { id = item.ID_MESTRE }) |
				@Html.ActionLink("Adicionar Formação", "Index","MestreFormacao", new { id = item.ID_MESTRE },null) |
				@Html.ActionLink("Adicionar Dependentes", "Index","MestreDependentes", new { id = item.ID_MESTRE },null) |
				@Html.ActionLink("Excluir", "Delete", new { id = item.ID_MESTRE })
			</td>
		</tr>
	}

</table>
