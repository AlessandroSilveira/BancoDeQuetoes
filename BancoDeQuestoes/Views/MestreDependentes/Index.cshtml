@model IEnumerable<BancoDeQuestoes.Models.MestreDependente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dependentes do Mestre</h2>
<h4>Mestre: @ViewBag.DadosMestre.DESC_NOME </h4>
<p>
   @Html.ActionLink("Novo Dependente", "Create", new { id = ViewBag.DadosMestre.ID_MESTRE }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Documento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeNascimento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdMestreDependente }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdMestreDependente }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdMestreDependente })
        </td>
    </tr>
}

</table>
