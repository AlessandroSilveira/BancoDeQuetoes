@model BancoDeQuestoes.Models.INSCR_BQ_DISCIPLINA

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Área</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Nova Área</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.DESC_DISCIPLINA, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DESC_DISCIPLINA, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.DESC_DISCIPLINA, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.TIPO_CONH_ESPEC, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(m => m.TIPO_CONH_ESPEC, new SelectList(new List<Object>
					{
			   new { value = "" , text = "Selecione"  },
					new { value = "S" , text = "Sim"  },
					new { value = "N" , text = "Não" }
					}, "value", "text", new { @class = "form-control" }))
				@Html.ValidationMessageFor(model => model.TIPO_CONH_ESPEC, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DESC_ATIVO, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(m => m.DESC_ATIVO, new SelectList(new List<Object>
					{
					new { value = "" , text = "Selecione"  },
					new { value = "S" , text = "Sim"  },
					new { value = "N" , text = "Não" }
					},
					"value",
					"text",
				 new { @class = "form-control" }))
				@Html.ValidationMessageFor(model => model.DESC_ATIVO, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Salvar" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
