@model BancoDeQuestoes.Models.INSCR_BQ_DISCIPLINA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Área</h2>

<h3>Tem certeza que deseja excluir essa área?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DESC_DISCIPLINA)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESC_DISCIPLINA)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TIPO_CONH_ESPEC)
        </dt>

        <dd>
			@{var tipo = Model.TIPO_CONH_ESPEC == "S" ? "Sim" : "Não";
			}
			@tipo
        </dd>

        <dt>
			@Html.DisplayNameFor(model => model.DESC_ATIVO)
        </dt>

        <dd>
			@{var ativo = Model.DESC_ATIVO == "S" ? "Sim" : "Não";
			}
			@ativo
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
