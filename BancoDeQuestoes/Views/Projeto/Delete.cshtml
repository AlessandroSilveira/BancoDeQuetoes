<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.COD_PROJETO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COD_PROJETO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DESC_PROJETO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESC_PROJETO)
        </dd>

