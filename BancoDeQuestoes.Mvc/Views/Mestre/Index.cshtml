@model IEnumerable<BancoDeQuestoes.Application.ViewModels.MestreViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Mestre</h2>

<p>
    @Html.ActionLink("Novo Mestre", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
	    <th>
		    @Html.DisplayNameFor(model => model.Cep)
	    </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Banca)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.Cep)
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
		@*<th>
			@Html.DisplayFor(model => item.Banca)
		</th>*@
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
	    <td>
		    @Html.ActionLink("Add Formação", "Index","MestreFormacao", new { id = item.MestreId },null) |
		    @Html.ActionLink("Add Dependente", "Index", "MestreDependente", new { id = item.MestreId },null) |
			@Html.ActionLink("Add Área", "Index","MestreArea", new { id = item.MestreId },null)|
		    @Html.ActionLink("Detalhes", "Details", new {id = item.MestreId}) |
		    @Html.ActionLink("Excluir", "Delete", new {id = item.MestreId})
	    </td>
    </tr>
}

</table>
