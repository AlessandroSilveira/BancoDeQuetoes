
@{
	using (Html.BeginForm("Search", "Mestre", FormMethod.Post))
	{<form class="form-horizontal">
			<fieldset>
				<legend>Pesquisa</legend>
				<div class="form-group">
					<label for="inputEmail" class="col-lg-2 control-label">Nome do Mestre</label>
					<div class="col-lg-4">
						<input type="text" class="form-control" id="DESC_NOME" name="DESC_NOME" placeholder="Nome do Mestre">
					</div>
			
					<label for="inputPassword" class="col-lg-2 control-label">Status</label>
					<div class="col-lg-4">
						<select class="form-control" id="DESC_ATIVO">
							<option value="">Selecione</option>
							<option value="S">Ativo</option>
							<option value="N">Desativado</option>
						</select>
					</div>
				</div>
				<br>
				<br/>
				<div class="form-group">
					<div class="col-lg-4 col-lg-offset-2">
						
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</div>
				<br>
				<br />
			</fieldset>
		</form>
	}
}
