
@{
	using (Html.BeginForm("Search", "Disciplina", FormMethod.Post))
	{
		<form class="form-horizontal">
			<fieldset>
				<legend>Pesquisar</legend>
				<div class="form-group">
					<label for="Area" class="col-lg-2 control-label">Área</label>
					<div class="col-lg-4">
						<select class="form-control" id="DisciplinaId" name="DisciplinaId">
							<option value="">Selecione</option>
							@foreach (var itens in ViewBag.ListaDisciplinas)
							{
								<option value="@itens.AreaId">@itens.Descricao</option>
							}
						</select>
					
					</div>
					<label for="Nivel" class="col-lg-2 control-label">Nível</label>
					<div class="col-lg-4">
						@Html.DropDownList("Nivel", null, htmlAttributes: new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<label for="Disciplina" class="col-lg-2 control-label">Disciplina</label>
					<div class="col-lg-4">
						<input type="text" class="form-control" id="Nome" name="Nome" placeholder="Disciplina">
					</div>
					<label for="Descricao" class="col-lg-2 control-label">Descrição</label>
					<div class="col-lg-4">
						<input type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Descrição">
					</div>
				</div>
				<div class="form-group">
					<label for="Biblioteca" class="col-lg-2 control-label">Bibliografia</label>
					<div class="col-lg-4">
						<input type="text" class="form-control" id="Bibliografia" name="Bibliografia" placeholder="Biblioteca">
					</div>
					<label for="TotalPagina" class="col-lg-2 control-label">Total de itens por página</label>
					<div class="col-lg-4">
						<input type="text" class="form-control" id="TotalPagina" name="TotalPagina" placeholder="Total de Páginas">
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-4 col-lg-offset-4">
						<button type="submit" class="btn btn-primary">Enviar</button>
					</div>
				</div>
			</fieldset>
		</form>
	}
}
