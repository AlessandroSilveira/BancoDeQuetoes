
@{
	using (Html.BeginForm("Search", "Disciplina", FormMethod.Post))
	{
		<form class="form-horizontal">
			<fieldset>
				<legend>Pesquisar</legend>
				<div class="form-group">
					<label for="Projeto" class="col-lg-2 control-label">Projeto</label>
					<div class="col-lg-4">
						<select class="form-control" id="ProjetoId" name="ProjetoId">
							
						</select>

					</div>
					<label for="Área" class="col-lg-2 control-label">Área</label>
					<div class="col-lg-4">

						<select class="form-control" id="AreaId" name="AreaId">
							
						</select>
					</div>
				</div>
				<div class="form-group">
					<label for="Mestre" class="col-lg-2 control-label">Mestre</label>
					<div class="col-lg-4">
						<select class="form-control" id="MestreId" name="MestreId"></select>
					</div>
					<label for="Descricao" class="col-lg-2 control-label">Status</label>
