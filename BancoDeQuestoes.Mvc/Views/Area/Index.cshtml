@model IEnumerable<BancoDeQuestoes.Application.ViewModels.AreaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Área</h2>

<p>
    @Html.ActionLink("Nova Área", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConhecimentoEspecifico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConhecimentoEspecifico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AreaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AreaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.AreaId })
        </td>
    </tr>
}

</table>
