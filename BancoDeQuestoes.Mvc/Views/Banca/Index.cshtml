@model IEnumerable<BancoDeQuestoes.Application.ViewModels.BancaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Banca de Mestres</h2>

<p>
    @Html.ActionLink("Nova Banca", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.BancaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.BancaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.BancaId })
        </td>
    </tr>
}

</table>
