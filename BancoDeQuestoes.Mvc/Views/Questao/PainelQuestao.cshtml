@using BancoDeQuestoes.Application.ViewModels

<h2>
	Painel de Questões
</h2>
@{
	var dadosQuestao = TempData["DadoaQuestao"] as QuestaoViewModel;
}
<table class="table">
	<tr>
		<td>
			<b>Código do Projeto:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.CodigoProjeto
			<input type="hidden" id="id_projeto" name="id_projeto" value="@dadosQuestao.TopicoAtribuido.ProjetoId" />
			<input type="hidden" id="id_topico_atribuido" name="id_topico_atribuido" value="@dadosQuestao.TopicoAtribuido.TopicoAtribuidoId" />
			<input type="hidden" id="mestre" name="mestre" value="@dadosQuestao.TopicoAtribuido.MestreId" />
		</td>
	</tr>
	<tr>
		<td>
			<b>Titulo do Conteúdo:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Disciplina.Descricao
			<input type="hidden" id="id_topico" name="id_topico" value="@dadosQuestao.TopicoAtribuido.Area.AreaId" />
		</td>
	</tr>
	<tr>
		<td>
			<b>Área:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Area.Descricao
		</td>
	</tr>
	<tr>
		<td>
			<b>Disciplina:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Disciplina.Descricao
			<input type="hidden" id="id_disciplina" name="id_disciplina" value="@dadosQuestao.TopicoAtribuido.DisciplinaId" />
		</td>
	</tr>
	<tr>
		<td>
			<b>Bibliografia:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Disciplina.Bibliografia
		</td>
	</tr>
	<tr>
		<td>
			<b>Número da Questão:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.NumeroQuestao
			<input type="hidden" id="numero_da_questao" name="numero_da_questao" value="@dadosQuestao.TopicoAtribuido.NumeroQuestao" />
			<input type="hidden" id="id_questao" name="id_questao" value="@dadosQuestao.QuestaoId" />
		</td>
	</tr>
	<tr>
		<td>
			<b>Data de Entrega:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.DataEntrega
		</td>
	</tr>
	<tr>
		<td>
			<b>Nível da Questão:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Nivel
		</td>
	</tr>
	<tr>
		<td>
			<b>Observação:</b>
		</td>
		<td>
			@dadosQuestao.TopicoAtribuido.Observacao
		</td>
	</tr>
</table>

<form class="form-horizontal">
	<fieldset>

		<div class="form-group">
			<label for="Questao" class="col-lg-2 control-label">Questão</label>
			<div class="col-lg-10">
				<textarea class="form-control" rows="3" name="questao" id="descricao"></textarea>
			</div>
		</div>

		<div class="form-group">
			<label for="arquivo_questao" class="col-lg-2 control-label">Anexar Imagem da Questão:</label>
			<div class="col-lg-10">
				<input type="file" class="form-control" id="arquivo_questao" placeholder="Anexar Imagem" name="arquivo_questao">
			</div>
		</div>

		<div class="form-group">
			<label for="AlternativaA" class="col-lg-2 control-label">Alternativa A:</label>
