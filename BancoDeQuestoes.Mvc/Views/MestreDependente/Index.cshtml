@model IEnumerable<BancoDeQuestoes.Application.ViewModels.MestreDependenteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Dependentes do Mestre</h2>
<h4>Mestre: @ViewBag.DadosMestre.Nome</h4>
<p>
    @Html.ActionLink("Novo Dependente", "Create", new { id = ViewBag.MestreId })
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Documento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MestreDependenteId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.MestreDependenteId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.MestreDependenteId })
        </td>
    </tr>
}

</table>
